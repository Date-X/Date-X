.index-banner{
	width: 100%;
	height: 500rpx;
}
.index-banner .slide-image{
	width: 100%;
  height: 520rpx;
}
.wx-swiper-dot text{
	background: #f00;
}
.index-menu{
	width: 100%;
	display: -webkit-flex;
	display: -webkit-box;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	background: #fff;
}
.index-menu-item{
	-webkit-flex: 0 0 25%;
	-webkit-box-flex: 0;
	        flex: 0 0 25%;
	max-width: 25%;
	text-align: center;
	margin-top: 10rpx;
/* 	border-top: 1rpx solid #ddd;
	border-bottom: 1rpx solid #ddd;
	border-right: 1rpx solid #ddd; */
	padding: 20rpx 20rpx;
	box-sizing: border-box;
	margin-bottom: -1rpx;
}
.index-menu-item image{
	width: 110rpx;
	height: 110rpx;
  border-radius: 50%;
}
.index-menu-item text{
	display: block;
	font-size: 30rpx;
	line-height: 1.4;
	white-space: nowrap;
}

.rec-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid lightgray;
  border-radius: 10rpx;
  width: 95%;
}

.room-item{
  width: 95%;
}

.room{
  background-color: white;
  font-size: 0.7em;
  font-weight: 700;
  height: 220rpx;
  margin:5rpx;
}

.description{
  width:100%;
  height:100rpx;
  border-style: double double double double;
  border-radius:5px;
  font-weight: 500;
  font-size: 0.9em;
  text-align: left;
  overflow: hidden;
}
.description text{
  display: -webkit-box;
  font-size:0.9em;
  line-height: 30rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}
.numbers{
  text-align: left;
  color: gainsboro;
  font-size: 0.7em;
}
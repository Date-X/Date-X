/* pages/rooms/rooms.wxss */
.true{
  background-color: white;
  font-size: 0.7em;
  font-weight: 700;
  height: 220rpx;
  margin:5rpx;
}
.description{
  width:100%;
  height:100rpx;
  border-style: double double double double;
  border-radius:5px;
  font-weight: 500;
  font-size: 0.9em;
  text-align: left;
  overflow: hidden;
}
.numbers{
  text-align: left;
  color: gainsboro;
  font-size: 0.7em;
}

.search-bar{
  margin-top: 1%;
  width:99%;
  height: 80rpx;
	border-radius:80rpx;
	border:2px solid #324B4E;
	background: beige;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.search-input{
  margin-left: 20rpx;
}

image{
  width: 70rpx;
  height: 70rpx;
}

.search-btn{
  margin-right: 30rpx;
}
page{
  background-color: ivory;
}

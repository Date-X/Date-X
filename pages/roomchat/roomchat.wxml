<!--pages/roomchat/roomchat.wxml-->
<text>pages/roomchat/roomchat.wxml</text>
<text>这是聊天界面，现用作功能测试</text>
<view class="weui-cells">
  <view class="weui-search-bar">
    <input type="text" maxlength="50" bindinput="input_message"></input>
    <button class="search-btn" bindtap="send_msg" wx:if="{{showbutton}}">搜索</button>
  </view>     
</view>

<button bindtap='fetchData'>
  update!刷新
</button>
<button bindtap='join'>
  join!加入此房间
</button>
<button bindtap='clear_message'>
  clear!清除msg
</button>
<button bindtap='quit'>
  quit!退出此房间
</button>
<button bindtap='enter_room'>
  enter!进入room页面
</button>
<text>{{str}}</text>
<view wx:for="{{msg}}">
  <view wx:if="{{item.user == open_id}}" style="text-align:right">
    1{{item.content}}
  </view>
  <view wx:else style='text-align:left'>
    2{{item.content}}
  </view>
</view>
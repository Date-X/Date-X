<!--pages/roomchat/roomchat.wxml-->
<view class='body' style=" background-image: url('../../images/bg1.jpg')">
  <view class='outer'>
    <view class='avatar'>
        <view wx:for='{{users}}' style='width:80rpx height:80rpx'>
        <image src='{{item.avatar}}' mode="{{aspectFit}}" style="width:80rpx height:80rpx" > </image> 
        </view>  
    </view>
      <button class='enter' bindtap='enter_room'><text>进入</text></button>
  </view>
  
  










  <button wx:if='{{in_room}}' class='chat'>
      <view class="weui-search-bar">
        <input type="text" maxlength="12" placeholder="请输入发送内容" bindinput="inputSearch"></input>
        <button class="search-btn" bindtap="submitSearch">发送</button>
      </view>     
  </button>
  <button wx:else bindtap='join' class='bottom'>
  加入房间
  </button>
</view>
